<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--
        ××严禁修改×× Begin By James
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:tabWidgetStyle">@style/TabWidgetStyle</item>
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppLogin" parent="AppBaseTheme">
        
    </style>
    
	<!-- Global TextView Style By James ××严禁修改×× -->
	<style name="TextViewStyle" parent="@android:style/Widget.TextView">
		 <item name="android:textSize">16dp</item>
	</style>
	
	<!-- Global EditText Style By James ××严禁修改×× -->
	<style name="EditTextStyle" parent="@android:style/Widget.EditText">
		 <item name="android:background">@drawable/app_edit_text_bg</item>
		 <item name="android:padding">1dp</item>
	</style>
    
	<!-- Global Button Style By James ××严禁修改××-->
	<style name="ButtonStyle" parent="@android:style/Widget.Button">
		 <item name="android:background">@drawable/app_button_bg</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:paddingRight">8dp</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
	</style>
    
	<!-- Global TabWidgetStyle Style By James ××严禁修改××-->
	<style name="TabWidgetStyle" parent="@android:style/Widget.TabWidget">
        <item name="android:gravity">top</item>
	</style>
    
	<!-- Global SpinnerStyle Style By James ××严禁修改××-->
	<style name="SpinnerStyle" parent="@android:style/Widget.Spinner">
		<item name="android:background">@drawable/app_edit_text_bg</item>
		<item name="android:minHeight">38dp</item>
		<item name="android:paddingLeft">0dp</item>
	</style>
	
	<!--	××严禁修改×× End By James	-->
	
    
    <!-- 工具样式 -->
    <style name="enable_edittext">
        <item name="android:background">#E5E5E5</item>
        <item name="android:editable">false</item>
    </style>
	
	<!-- Login Css By James -->
	<style name="login_body">
	    <item name="android:padding">5dp</item>
		<item name="android:background">@drawable/corners_fff</item>
	</style>
    
    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
        <item name="android:typeface">monospace</item>
        <item name="android:minWidth">60dp</item>
    </style>
    
    <!--TextFont By Lance bg -->
    <style name="TextFont">
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>	
    <!--TextSize By Lance end -->
</resources>
