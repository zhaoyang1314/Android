<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="220dp"
    android:id="@+id/scanTable"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp">
     <LinearLayout
	     style="@style/TextFont"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content" >
        <com.profitles.framwork.cusviews.view.MyTextView
          style="@style/TextFont"
          android:layout_height="wrap_content"
          android:text="@string/txvSeqScan"
          android:lineSpacingExtra="9dp" />       

       <com.profitles.framwork.cusviews.view.MyReadBQ
           android:id="@+id/ext_scan"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:ems="4" >

       </com.profitles.framwork.cusviews.view.MyReadBQ>
     </LinearLayout>
    
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="250dp"
    android:layout_marginLeft="26dp"
    android:layout_marginRight="26dp" >
     <LinearLayout 
         style="@style/TextFont"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     >
       <com.profitles.framwork.cusviews.view.MyTextView
                  style="@style/TextFont"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/txvqty" />
              <com.profitles.framwork.cusviews.view.MyEditText
                  android:id="@+id/etx_scanQty"
                  style="@style/TextFont"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ems="10"
                  android:inputType="numberSigned"
                  android:text="" />
            <Button
	        android:id="@+id/buttonShifiDuty"
	        android:layout_width="100dp"
	        android:layout_height="35dp"
	        android:background="@drawable/login_btn"
	        android:paddingTop="1dp"
	        android:text="@string/btnCheckReport"
	        android:textColor="#FFFFFF"
	        android:textSize="12dp" 
	        android:visibility="gone"
	        android:layout_marginLeft="50dp"/>
       <com.profitles.framwork.cusviews.view.MyTextView 
          style="@style/TextFont"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="SN:"
          android:lineSpacingExtra="9dp" 
          />  
       <com.profitles.framwork.cusviews.view.MyEditText
                  android:id="@+id/ext_sn"
                  style="@style/TextFont"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@null"
                  android:ems="10"
                  android:enabled="false"
                  android:text="" />
     </LinearLayout>  
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
